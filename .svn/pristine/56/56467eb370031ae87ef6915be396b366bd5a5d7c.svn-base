<script>
    import { commonMixin } from '../../config/base/commonMixin.js';
    import { Toast } from "mint-ui";
    import headers from '../../components/headers.vue';
    var resourceUrl = process.env.apiDomain;
    export default {
        name: "activity",
        mixins: [commonMixin],
        components: {
            headers,
        },
        data(){
           return{
               cloudShopName:'',
               address:'',
               mobile:'',
               contacts:''
           }
        },
        mounted(){
            // this.init();
            this.getuserInfo();
        },
        methods:{
            //提交数据
            submit($event){
                var that = this;
                if(that.cloudShopName ==''){
                     Toast({
                         message:'汽配商名称不能为空',
                         duration:3000,
                         className:'lxlactivity'
                     });
                    return
                }
                if(that.contacts ==''){
                    Toast({
                        message:'联系人姓名不能为空',
                        duration:3000,
                        className:'lxlactivity'
                    });
                    return;
                }
                if(!that.isPoneAvailable(that.mobile)){
                    Toast({
                        message:'请填写正确的手机号码',
                        duration:3000,
                        className:'lxlactivity'
                    });
                    return;
                }
                if(that.address ==''){
                    Toast({
                        message:'联系地址不能为空',
                        duration:3000,
                        className:'lxlactivity'
                    });
                    return;
                }

                that.ajax({
                    method:"POST",
                    url:resourceUrl+"/Activity/AskForPartner",
                    dataType:"JSON",
                    data:{
                        "cloudShopName":that.cloudShopName,
                        "contacts":that.contacts,
                        "mobile":that.mobile,
                        "address":that.address
                    },
                    success:function(data){
                        if(data.Body ==1){

                            Toast({
                                message: '申请成功',
                                duration:1000,
                                className:'lxlactivity',
                                iconClass: 'icon icon-success'
                            });

                            //跳到页面首页
                            setTimeout(function(){
                                that.goHome();
                            },1000)

                        }

                    }
                })

            },
            //页面数据初始化
            init(){
                // var userInfo  = JSON.parse(localStorage.getItem('user_info'))
                // this.address = userInfo.address;
                // this.cloudShopName = userInfo.cloudShopName;
                // this.contacts = userInfo.contacts;
                // this.mobile = userInfo.mobile;
            },
            //页面数据提交check
            check(){

            },
            //验证手机号码
            isPoneAvailable(str){
                var myreg=/^[1][3,4,5,7,8][0-9]{9}$/;
                if(!myreg.test(str)){
                    return false;
                }else {
                    return true;
                }
            },
            goHome(){
                this.setupWebViewJavascriptBridge(function (bridge) {
                    bridge.callHandler('native_GoHome', '', function (response) {
                    });
                });
            },
            //获取用户信息
            getuserInfo(){
                var _this=this;
                _this.ajax({
                    method:"POST",
                    url:resourceUrl+"/usercenter/getuser",
                    dataType:"JSON",
                    success:function(data){
                        if(data.Body){
                            _this.address = data.Body.companyAddress;
                            _this.cloudShopName = data.Body.companyName;
                            _this.contacts = data.Body.realName;
                            _this.mobile = data.Body.mobile;
                        }

                    }
                });
            },
        }

    }
